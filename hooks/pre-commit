#!/bin/bash
# Pre-commit hook for httpmorph
# Runs linting before allowing commits
#
# To install: cp hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "ğŸ” Running code quality checks..."
echo ""

# Run linting
echo "ğŸ“‹ Linting with ruff..."
if ruff check src/ tests/; then
    echo "âœ… Linting passed"
else
    echo "âŒ Linting failed - please fix errors"
    exit 1
fi

echo ""
echo "âœ¨ All checks passed!"
echo "âœ… Ready to commit"
